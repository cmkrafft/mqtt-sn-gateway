{
  "name": "mqtt-sn-gateway",
  "version": "0.0.1",
  "license": "MIT",
  "description": "MQTT-SN Gateway",
  "scripts": {
    "build-ts": "tsc",
    "copy-assets": "mkdir -p dist/assets && cp -r src/assets/* dist/assets/",
    "tag-version": "echo $npm_package_version > dist/assets/version.txt",
    "start": "node dist/app.js",
    "test": "ts-node node_modules/jasmine/bin/jasmine --config=spec/support/jasmine.json",
    "coverage": "nyc -r text -e .ts -x \"spec/*.test.ts\" npm run test",
    "build": "yarn copy-assets && yarn tag-version && yarn build-ts",
    "client": "node dist/test.js"
  },
  "author": "com2m GmbH",
  "devDependencies": {
    "@types/node": "^14.14.7",
    "ts-node": "^9.0.0",
    "tslint": "^6.1.3"
  },
  "dependencies": {
    "@types/jasmine": "^3.6.1",
    "@types/mqtt": "^2.5.0",
    "@types/winston": "^2.4.4",
    "jasmine": "^3.6.3",
    "jasmine-node": "^3.0.0",
    "mqtt": "^4.2.6",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.1.0",
    "rimraf": "^3.0.2",
    "tsc": "^1.20150623.0",
    "tslib": "^2.0.3",
    "typedoc": "0.19.2",
    "typedoc-plugin-external-module-map": "1.2.1",
    "typedoc-plugin-external-module-name": "^4.0.3",
    "typescript": "^4.0.5",
    "winston": "^3.3.3"
  }
}
